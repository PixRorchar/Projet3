<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}
				Expérience | Accueil
			{% endblock %}
		</title>

		<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('css/base.css') }}">
		<link rel="stylesheet" href="{{ asset('css/header.css') }}">
		<link rel="stylesheet" href="{{ asset('css/footer.css') }}">
		<link rel="stylesheet" href="{{ asset('css/articles.css') }}">
		<link rel="stylesheet" href="{{ asset('css/form.css') }}">
		<link rel="stylesheet" href="{{ asset('css/table.css') }}">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}


	</head>


	<body>

        <!--HEADER-->
		<header>
			{% block header %}
            <div class="header">
                <div class="header__band"></div>
                <div class="header__texture"></div>
                <!--
                    <div class="header__mask">
                        <svg width="100%" height="100%" viewbox="0 0 100 100" preserveAspectRatio="none">
                            <path d="M0 100 L 0 0 C 25 100 75 100 100 0 L 100 100" fill="#fff"></path>
                        </svg>
                    </div>
                -->
                <div class="container">
                    <div class="header__navbar">
                        <div class="header__navbar--logo">
                            <h1 class="header__navbar--logo-title">Expérience en ligne</h1>
                        </div>
                        <div class="header__navbar--menu">
                            <a href="{{ path('main') }}" class="header__navbar--menu-link">
                                <i class="fas fa-home" id="Accueil"></i>
                                Accueil</a>
                            <a href="{{ path('deroulement') }}" class="header__navbar--menu-link">
                                <i class="fas fa-tasks" id="Deroulement"></i>
                                Déroulement</a>
                            <a href="{{ path('exemple') }}" class="header__navbar--menu-link">
                                <i class="far fa-compass" id="Exemple"></i>
                                Exemple</a>
                            <a href="{{ path('inscription') }}" class="header__navbar--menu-link">
                                <i class="fas fa-sign-in-alt" id="Inscription"></i>
                                Inscription</a>
                            <a href="{{ path('repas') }}" class="header__navbar--menu-link">
                                <i class="fas fa-play" id="Commencer"></i>
                                Commencer l'expérience (à venir)</a>
                        </div>
                        <div class="header__navbar-toggle">
                            <span class="header__navbar-toggle-icons"></span>
                        </div>
                    </div>
                    {% endblock %}
                    {# <div class="header__slogan">
                        <h1 class="h__slogan--title">Accueil</h1>
                    </div>
                </div>
            </div>
		</header> #}

        <!--BODY-->
		{% block body %}{% endblock %}


		{% block javascripts %}{% endblock %}

        <!--FOOTER-->
		<footer>
			{% block footer %}
            <div class="footer">
                <div class="container">
                    <div class="footer__navbar">
                        
                        <div class="footer__navbar--menu">
                            <a href="Mailto:experience-en-ligne@agroparistech.fr" class="footer__navbar--menu-link"><i class="fas fa-phone"></i> Contact</a>
                            <a href="{{ path('rgpd') }}" class="footer__navbar--menu-link"><i class="fas fa-server"></i> RGPD</a>
                            <a href="{{ path('main') }}" class="footer__navbar--menu-link"><i class="fas fa-home"></i> Accueil</a>
                        </div>
                        <div class="footer__navbar-toggle">
                            <span class="footer__navbar-toggle-icons"></span>
                        </div>
                        <div class="footer__navbar--copyright">
                            <br>
                            <p><i class="far fa-copyright"></i> Copyright Herold Pierrick</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
		</footer>

        <!--SCRIPTS-->
		<script src="https://kit.fontawesome.com/e4f24efc65.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="js/app.js"></script>        
	</body>

</html>
